modules = ["nodejs-20", "python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["vim-full", "nano"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow]]
name = "Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node server.js"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "python -m http.server 5000"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 5000
externalPort = 80
